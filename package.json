{
  "private": true,
  "scripts": {
    "setup": "yarn install --ignore-scripts",
    "prepare": "yarn run download:plugins && lerna run prepare",
    "rebuild:browser": "theia rebuild:browser",
    "rebuild:electron": "theia rebuild:electron",
    "start:browser": "yarn rebuild:browser && yarn --cwd browser-app start",
    "start:electron": "yarn rebuild:electron && yarn --cwd electron-app start",
    "watch": "lerna run --parallel watch",
    "download:plugins": "theia download:plugins"
  },
  "devDependencies": {
    "lerna": "2.4.0"
  },
  "theiaPluginsDir": "plugins",
  "theiaPlugins": {
    "vscode-builtin-java": "https://github.com/theia-ide/vscode-builtin-extensions/releases/download/v1.39.1-prel/java-1.39.1-prel.vsix"
  },
  "workspaces": [
    "checkerframeworkdemo", "browser-app", "electron-app"
  ]
}
